<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h3>新規投稿</h3>
      <table class="table">
        <tbody>
         <%= form_with(model: @place,local: true) do |f| %>
         <tr>
            <th><%= f.label :name, '地点名' %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th><%= f.label :postala_code, '郵便番号'%></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th><%= f.label :address, '住所'%></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th><%= f.label :song, '曲名' %></th>
            <td><%= f.collection_select :song_id, Song.all, :id, :name %></td>
          </tr>
          <tr>
            <th><%= f.label :image, '画像' %></th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th><%= f.label :member, 'メンバー' %></th>
            <td><%= f.collection_check_boxes(:member_ids, Member.all, :id, :name) do |member| %> 
                  <%= member.label do %>
                    <%= member.check_box %>
                    <%= member.text %>
                  <% end %>
                <% end %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :body, '説明文' %></th>
            <td><%= f.text_area :body %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit '投稿する' %>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


